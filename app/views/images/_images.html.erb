<ul class="media-list">
  <% images.each do |image| %>
    <% user = image.user %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(image.user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to user.name, user_path(user) %> <span class="text-muted">posted at <%= image.created_at %></span>
        </div>
        <div>
          <p>
            <% if image.image? %>
　　        <%= image_tag image.image.thumb.url %>
　          <% else %>
        　　<%= image_tag 'noimage.gif' %>
        　   <% end %></p>
        </div>
        <div>
          <% if current_user == image.user %>
            <%= link_to "Delete", image, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate images %>
</ul>